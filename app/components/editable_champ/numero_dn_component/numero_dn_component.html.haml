
.fr-input-group{ class: input_group_class }
  = @form.label :numero_dn, for: @champ.numero_dn_input_id, class: 'fr-label' do
    - safe_join [t('.numero_dn_label'), @champ.required? ? render(EditableChamp::AsteriskMandatoryComponent.new) : ''], ' '
  = @form.text_field :numero_dn,
    required: @champ.required?,
    aria: { describedby: [dom_id(@champ, :numero_dn_notice), @champ.numero_dn_error? ? dom_id(@champ, :numero_dn_error) : nil].compact.join(' ') },
    data: { controller: 'format', format: 'integer' },
    class: "width-33-desktop fr-input small-margin", id: @champ.numero_dn_input_id

  - if @champ.numero_dn_error?
    %p.fr-error-text{ id: dom_id(@champ, :numero_dn_error) }= t('.numero_dn_error')
  - elsif @champ.fetch_external_data_pending?
    %p.fr-info-text= t('.numero_dn_verification_pending')

.fr-input-group{ class: input_group_class }
  = @form.label :date_de_naissance, for: @champ.date_de_naissance_input_id, class: 'fr-label' do
    - safe_join [t('.date_de_naissance_label'), @champ.required? ? render(EditableChamp::AsteriskMandatoryComponent.new) : ''], ' '
  = @form.date_field :date_de_naissance,
    required: @champ.required?,
    aria: { describedby: dom_id(@champ, :date_de_naissance) },
    class: "width-33-desktop fr-input small-margin", id: @champ.date_de_naissance_input_id
